<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.filmkit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.RECORD_VIDEO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.app.filmkit.AudioRecordTest"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.app.filmkit.CaptureScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.app.filmkit.EditScreenActivity"
            android:label="@string/title_activity_edit_screen">
        </activity>
        <activity
            android:name="com.app.filmkit.MainMenuActivity"
            android:label="@string/title_activity_main_menu" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.app.filmkit.IntroScreenActivity"
            android:label="@string/title_activity_intro_screen" >
            
          <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.filmkit.VideoPlayerActivity"
            android:label="@string/title_activity_video_play" >
              
        </activity>
        
         <activity
             android:screenOrientation="portrait"
            android:name="com.app.filmkit.ImageEditActivity"
            android:label="Edit Image" >
        </activity>
        
         
    </application>

</manifest>
